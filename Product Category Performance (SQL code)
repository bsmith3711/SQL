SELECT 
  pc.product_category_name_english,
  COUNT(oi.order_id) AS total_orders,
  SUM(oi.price) AS total_revenue,
  AVG(oi.price) AS average_price,
  AVG(orv.review_score) AS average_review_score
FROM 
  OLIST_ORDER_ITEMS_DATASET oi
JOIN 
  OLIST_PRODUCTS_DATASET p ON oi.product_id = p.product_id
JOIN 
  PRODUCT_CATEGORY_NAME_TRANSLATION pc ON p.product_category_name = pc.product_category_name
JOIN 
  OLIST_ORDERS_DATASET o ON oi.order_id = o.order_id
JOIN 
  OLIST_ORDER_REVIEWS_DATASET orv ON o.order_id = orv.order_id
GROUP BY 
  pc.product_category_name_english
ORDER BY 
  total_revenue DESC;
